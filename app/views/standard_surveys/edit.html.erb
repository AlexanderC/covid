<%= render layout: '/shared/public_forms_outside_active_admin', locals: {title: "Questionnaire récurrent"} do %>
  <%= simple_form_for(@form, method: :patch, url: standard_survey_path(id: @form.standard_survey.public_token)) do |f| %>
    <%= f.input :otp, as: :hidden %>

    <%= f.input :cohabitants_recent_change, autofocus: true, label: "Depuis le dernier questionnaire, y-a-t-il eu un changement parmi les gens présents à votre domicile pendant le confinement ?", as: :radio_buttons %>
    <%= f.input :body_temperature, as: :float, label: "Prenez votre température", hint: "°C" %>
    <%= f.input :breathing_difficulty_borg_scale, label: "Cochez la case décrivant le mieux votre gêne respiratoire (sensation d’étouffement, dyspnée)", as: :select, include_blank: false, collection: StandardSurvey.enum_filter_collection(:breathing_difficulty_borg_scales) %>
    <%= f.input :heartbeats_per_minute, as: :integer, label: "Mesurez votre fréquence cardiaque", hint: "/minute" %>
    <%= f.input :respiratory_rate_in_cycles_per_minute, as: :integer, label: "Mesurez votre fréquence respiratoire", hint: "cycles/minutes" %>
    <%= f.input :recent_cold_chill, as: :radio_buttons, label: "Depuis que vous avez rempli le dernier questionnaire, avez-vous eu des frissons ?", hint: "Un frisson est une sensation de froid accompagnée de tremblements." %>
    <%= f.input :recent_faintness, label: "Depuis que vous avez rempli le dernier questionnaire, avez-vous fait un malaise ?", as: :radio_buttons %>
    <%= f.input :agreed_containment, label: "Vous sentez vous capable de continuer à respecter les conditions de confinement ?", as: :radio_buttons %>
    <%= f.input :agreed_containment_comment, label: "Si Non, pourquoi ?", as: :text, hint: "optionnel" %>

    <%= f.button :submit, value: "Valider", data: { disable_with: "Validation en cours ..." }, class: "btn btn-primary" %>
  <% end %>
<% end %>